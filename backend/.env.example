# .env.example for room kiosk backend

# Email address of the user to delegate as (a real Workspace user with access to room calendars)
DELEGATED_USER=<gmail workspace authorised email>

# Path to the service account JSON file with domain-wide delegation enabled
GOOGLE_APPLICATION_CREDENTIALS=/opt/room-kiosk/creds.json

# Room names and calendar IDs
ROOM_04_NAME=<room name>
ROOM_04_CALENDAR_ID=<calendar email>

ROOM_05_NAME=<room name>
ROOM_05_CALENDAR_ID=<calendar email>

# How many hours in advance to look for upcoming meetings
LOOKAHEAD_HOURS=12

# How many seconds to cache Google Calendar results between requests
CACHE_SECONDS=15

# Port for the backend API to bind to (usually 5000)
PORT=5000
